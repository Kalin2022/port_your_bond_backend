{
    "compilerOptions": {
      "target": "ES2020",                     
      "module": "CommonJS",                  
      "lib": ["ES2020"],                     
      "strict": true,                        
      "esModuleInterop": true,               
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,                  
      "outDir": "./dist",                    
      "rootDir": ".",                        
      "resolveJsonModule": true,            
      "moduleResolution": "node",           
      "types": ["node"]
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }
  